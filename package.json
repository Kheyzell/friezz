{
  "name": "friezz",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "start": "turbo run dev",
    "build": "turbo run build",
    "start:prod": "node apps/server/dist/main",
    "docker:start-db": "docker-compose up -d",
    "docker:schema-db": "docker-compose exec friezz_postgres pg_dump -U postgres -d postgres -s > ./database/friezz_db_schema.sql",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "husky": "^8.0.3",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  }
}
